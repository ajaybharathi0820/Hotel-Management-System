@model HotelManagementWeb.Models.Room

@{ // url(/RoomImages/@Model.RoomImage)

    // var imageSrc = String.Format("data:image;base64", Convert.ToBase64String(Model.ImageByte));

}
<style>
    .onhover:hover {
        box-shadow: 0px 30px 40px -20px hsl(229, 6%, 66%);
        transform: scale(1.1);
        z-index: 1;
    }

    .onhover {
        transition: all .2s ease-in-out;
    }
</style>
<div class="card col-md-4 col- col-lg-3 col-sm-auto mt-16 ">
    <div class=" font-sans  ">
        <div class="flex">
            <div class="max-w-md md:max-w-2xl px-2 onhover">
                <div class="bg-white shadow-xl rounded-lg overflow-hidden md:flex " style="border-bottom: 3px solid rgb(126 34 206); min-height: 220px; ">
                    <div class="bg-cover bg-bottom h-56 md:h-auto md:w-56 onSmallImage" style="background-image:


                         url(/Content/RoomImages/@Model.RoomImage)">
                    </div>
                    <div>
                        <div class="p-4 md:p-5">
                            <p class="font-bold text-xl md:text-2xl ">@Model.Type - @Model.RoomNumber<span style="margin-left:1px;" class="pull-right">₹@Model.RoomPrice</span>    </p>
                            <p class="text-gray-700 md:text-lg">@Model.RoomDescription</p>
                        </div>
                        <div class="p-4 md:p-5 bg-gray-100">
                            <div class="sm:flex sm:justify-between sm:items-center">
                                <div>
                                    <div class="text-lg text-gray-700"><span class="text-gray-900 font-bold">@Model.RoomCapacity  </span>person*</div>
                                    <div class="flex items-center">

                                    </div>
                                </div>
                              
                                    <button data-toggle="modal" data-target="#@Model.RoomId" class="mt-3 bg-w sm:mt-0 py-2 px-5 md:py-3 md:px-6 bg-purple-700 hover:bg-purple-600 font-bold text-white md:text-lg rounded-lg shadow-md" style="height:35px">Book now</button>
                                
                            </div>
                            <div class="mt-3 text-gray-600 text-sm md:text-base">*Prices may vary depending on selected date.</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

<div class="modal fade" id="@Model.RoomId" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Confirm Booking - <span class="font-bold">@Model.Type</span></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Are you sure you want to Book a Room 
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <a type="button" class="btn btn-primary" style="width:75px" href="@Url.Action("BookingInvoice","Invoice",Model)">Yes</a>
            </div>
        </div>
    </div>
</div>
